<DOCTYPE html>
<html>
    <head>
        <title> FoodMart | @ViewBag.Title</title>
        <link rel="stylesheet" href="~/css/Style.css"/>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="Grid">
            <header>
                <div class="Header-title">
                    @if(Program.CurrentUser != null)
                    {
                        <a asp-controller="Home" asp-action="Index"><h1 class="TitleOfStore">FoodMart</h1></a>
                    }
                    else
                    {
                        <h1 class="TitleOfStore">FoodMart</h1>
                    }
                </div>

                @if(Program.CurrentUser != null)
                {
                    <div class="Header-buttons">
                        @if (ViewBag.CartPage != true)
                        {
                            <a asp-controller="Home" asp-action="Cart"> <img src="~/img/icons/Cart.png" /> </a>
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="Cart"> <img src="~/img/selected-icons/Selected_Cart.png" /> </a>
                        }

                        @if (ViewBag.AccountPage != true)
                        {
                            <a> <img src="~/img/icons/Account.png" /> </a>
                        }
                        else
                        {
                            <a> <img src="~/img/selected-icons/Selected_Account.png" /> </a>
                        }
                    </div>
                }
                else
                {
                    <!-- TODO Сделать кнопки -->
                }
            </header>

            <div class="GridBody">
                @RenderBody()
            </div>

            <footer>
                <h5>Copyright 2023 - 2023 Rifen Inc. Все права не защищены.</h5>
            </footer>
        </div>
    </body>
</html>
